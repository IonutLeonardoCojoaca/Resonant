<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorTheme"
    tools:context=".ui.fragments.ExploreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TOOLBAR -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/superiorToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_s_resonant"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_bold"
                android:text="Explorar"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CircularUserImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/chartsTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/chartsFeatured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_bold"
                android:text="Descubre la variedad de Resonant"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="start"/>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp">

            <ImageView
                android:id="@+id/centerCircle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="10dp"
                android:src="@drawable/placeholder_circle"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.39"
                android:layout_marginVertical="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.45" />

            <!-- Texto del género favorito — superpuesto en el centro del círculo -->
            <LinearLayout
                android:id="@+id/genreOverlayContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="12dp"
                android:alpha="0"
                app:layout_constraintWidth_percent="0.38"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="@id/centerCircle"
                app:layout_constraintBottom_toBottomOf="@id/centerCircle"
                app:layout_constraintStart_toStartOf="@id/centerCircle"
                app:layout_constraintEnd_toEndOf="@id/centerCircle">

                <TextView
                    android:id="@+id/tvGenreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu género"
                    android:fontFamily="@font/unageo_bold"
                    android:textColor="#80FFFFFF"
                    android:textSize="9sp"
                    android:letterSpacing="0.12"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/tvFavoriteGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/unageo_bold"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    tools:text="Pop" />

            </LinearLayout>


            <ImageView
                android:id="@+id/rotatingRings"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_rings_dashed"
                app:layout_constraintWidth_percent="0.43"
                app:layout_constraintVertical_bias="0.45"
                app:layout_constraintDimensionRatio="1:1"
                android:alpha="0.8"
                android:elevation="11dp"
                app:layout_constraintTop_toTopOf="@id/centerCircle"
                app:layout_constraintBottom_toBottomOf="@id/centerCircle"
                app:layout_constraintStart_toStartOf="@id/centerCircle"
                app:layout_constraintEnd_toEndOf="@id/centerCircle"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnArtistas"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="-22dp"
                android:layout_marginBottom="7dp"
                android:paddingStart="10dp"
                android:textAlignment="center"
                android:background="@drawable/bg_button_ripple_top_left"
                android:elevation="5dp"
                android:fontFamily="@font/unageo_bold"
                android:text="Artistas"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="@null"
                app:iconTint="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/btnGeneros"
                app:layout_constraintEnd_toStartOf="@id/centerCircle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintVertical_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGeneros"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_button_ripple_middle_left"
                app:backgroundTint="@null"
                android:padding="0dp"
                android:text="Géneros"
                android:elevation="5dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/unageo_bold"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintVertical_weight="1"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/centerCircle"
                app:layout_constraintTop_toBottomOf="@+id/btnArtistas"
                app:layout_constraintBottom_toTopOf="@+id/btnPopulares" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPopulares"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="-22dp"
                android:paddingStart="10dp"
                android:background="@drawable/bg_button_ripple_bottom_left"
                android:elevation="5dp"
                android:textAlignment="center"
                android:fontFamily="@font/unageo_bold"
                android:text="Éxitos"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/centerCircle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnGeneros"
                app:layout_constraintVertical_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAlbumes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="-22dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="7dp"
                android:paddingEnd="10dp"
                android:background="@drawable/bg_button_ripple_top_right"
                android:elevation="5dp"
                android:fontFamily="@font/unageo_bold"
                android:text="Álbumes"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toTopOf="@+id/btnPlaylists"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/centerCircle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintVertical_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlaylists"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_button_ripple_middle_right"
                app:backgroundTint="@null"
                android:text="Playlists"
                android:elevation="5dp"
                android:padding="0dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/unageo_bold"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintVertical_weight="1"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/centerCircle"
                app:layout_constraintTop_toBottomOf="@+id/btnAlbumes"
                app:layout_constraintBottom_toTopOf="@+id/btnTrending" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrending"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="-22dp"
                android:layout_marginEnd="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/bg_button_ripple_bottom_right"
                android:elevation="5dp"
                android:fontFamily="@font/unageo_bold"
                android:text="Tendencias"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textAlignment="center"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/centerCircle"
                app:layout_constraintTop_toBottomOf="@+id/btnPlaylists"
                app:layout_constraintVertical_weight="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/genreTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/genreFeatured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_bold"
                android:text="Géneros más populares"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="start"/>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:paddingHorizontal="8dp"
            android:paddingBottom="200dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>