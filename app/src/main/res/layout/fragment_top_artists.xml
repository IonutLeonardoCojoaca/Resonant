<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorTheme">

    <!-- FIXED TOP BAR -->
    <RelativeLayout
        android:id="@+id/topBarContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="12dp"
        android:background="@color/primaryColorTheme">

        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_accent_pill">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/ic_arrow_back"
                android:clickable="false"
                android:focusable="false" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Top Artistas"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/unageo_bold" />

    </RelativeLayout>

    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBarContainer"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- TABS -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabIndicatorColor="@color/secondaryColorTheme"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="#80FFFFFF"
                app:tabTextAppearance="@style/CustomTabTextAppearance"
                app:tabMode="fixed"
                app:tabGravity="fill"
                android:layout_marginBottom="16dp"/>

            <!-- FEATURED ARTIST SECTION (TOP 1) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/featuredArtistCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Image Gallery / ViewPager -->
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/artistGalleryPager"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Gradient Overlay -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/gradient_bottom_overlay"
                        app:layout_constraintTop_toTopOf="@id/artistGalleryPager"
                        app:layout_constraintBottom_toBottomOf="@id/artistGalleryPager" />

                    <!-- Rank Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_bold"
                        android:background="@drawable/bg_rank_badge_gold"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- Artist Name -->
                    <TextView
                        android:id="@+id/featuredArtistName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textSize="28sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_bold"
                        android:layout_marginBottom="4dp"
                        android:layout_marginHorizontal="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/featuredArtistStats"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/featuredArtistStats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Artista más escuchado del periodo"
                        android:textSize="14sp"
                        android:textColor="#CCFFFFFF"
                        android:fontFamily="@font/unageo_medium"
                        android:layout_marginBottom="16dp"
                        android:layout_marginHorizontal="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/btnViewFeatured"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewFeatured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver Perfil"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_bold"
                        android:backgroundTint="@color/secondaryColorTheme"
                        android:layout_marginBottom="24dp"
                        android:layout_marginEnd="16dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Más Artistas Top"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/unageo_bold"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp" />

            <!-- LIST OF OTHER ARTISTS -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTopArtists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="200dp"
                android:overScrollMode="never" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
