<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet">

    <!-- Playlist info header -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/playlistImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_playlist_stack"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:shapeAppearanceOverlay="@style/RoundedCornersImage"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/playlistData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/playlistImage"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/playlistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/white"
                android:fontFamily="@font/unageo_bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/playlistOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/subtitleBottomSheet"
                android:fontFamily="@font/unageo_medium"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/playlistNumberOfTracks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textBottomSheet"
                android:fontFamily="@font/unageo_regular"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Separator -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1AFFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="12dp" />

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator">

        <!-- Edit -->
        <TextView
            android:id="@+id/editPlaylistButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_edit"
            android:drawablePadding="14dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/unageo_medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:gravity="center_vertical"
            android:text="Editar nombre"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <!-- Toggle visibility -->
        <TextView
            android:id="@+id/toggleVisibilityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_public"
            android:drawablePadding="14dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/unageo_medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:gravity="center_vertical"
            android:text="Hacer pÃºblica"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#12FFFFFF"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="4dp" />

        <!-- Delete -->
        <TextView
            android:id="@+id/deletePlaylistButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="14dp"
            android:drawableTint="#EF5350"
            android:fontFamily="@font/unageo_medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:gravity="center_vertical"
            android:text="Eliminar lista"
            android:textColor="#EF5350"
            android:textSize="15sp" />

        <!-- Cancel -->
        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_cancel"
            android:drawablePadding="14dp"
            android:drawableTint="#88FFFFFF"
            android:fontFamily="@font/unageo_medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="14dp"
            android:gravity="center_vertical"
            android:text="Cancelar"
            android:textColor="#88FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>