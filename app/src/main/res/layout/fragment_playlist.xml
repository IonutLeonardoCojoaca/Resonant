<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PlaylistFragment"
    android:background="@color/primaryColorTheme">

    <!-- Fixed top bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14dp"
        android:paddingVertical="6dp"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/arrowGoBackButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:background="@color/transparent"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playlistText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="56dp"
            android:fontFamily="@font/unageo_medium"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/settingsBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_item_settings_vertical"
                android:clickable="false"
                android:focusable="false" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Main scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Cover image with gradient overlay -->
            <FrameLayout
                android:id="@+id/coverContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="12dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/playlistCoverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:shapeAppearanceOverlay="@style/RoundedCornersAlbumImage"
                    android:scaleType="centerCrop"
                    android:background="@color/cardsTheme" />

            </FrameLayout>

            <!-- Info section -->
            <LinearLayout
                android:id="@+id/playlistDataContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coverContainer">

                <!-- Visibility badge -->
                <LinearLayout
                    android:id="@+id/visibilityBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_accent_pill"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/ivVisibilityIcon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_public"
                        app:tint="@color/white"
                        android:layout_marginEnd="5dp" />

                    <TextView
                        android:id="@+id/tvVisibilityBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privada"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:fontFamily="@font/unageo_bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.04" />

                </LinearLayout>

                <!-- Playlist name -->
                <TextView
                    android:id="@+id/playlistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:fontFamily="@font/unageo_bold"
                    android:textSize="22sp" />

                <!-- Owner -->
                <TextView
                    android:id="@+id/playlistOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/secondaryColorTheme"
                    android:fontFamily="@font/unageo_medium"
                    android:textSize="14sp" />

                <!-- Description (hidden if empty) -->
                <TextView
                    android:id="@+id/playlistDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text=""
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#99FFFFFF"
                    android:fontFamily="@font/unageo_regular"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <!-- Duration + tracks row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_sound"
                        app:tint="#77FFFFFF"
                        android:layout_marginEnd="5dp" />

                    <TextView
                        android:id="@+id/playlistNumberOfTracks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#99FFFFFF"
                        android:fontFamily="@font/unageo_regular"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6dp"
                        android:text="·"
                        android:textColor="#55FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="@font/unageo_regular" />

                    <TextView
                        android:id="@+id/playlistDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#99FFFFFF"
                        android:fontFamily="@font/unageo_regular"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:background="#18FFFFFF" />

            </LinearLayout>

            <!-- Song list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/songList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="250dp"
                android:overScrollMode="never"
                android:paddingHorizontal="10dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/playlistDataContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Empty state -->
            <TextView
                android:id="@+id/noSongsInPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_regular"
                android:text="Esta playlist está vacía.\nBusca canciones y añádelas aquí."
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#66FFFFFF"
                android:layout_marginTop="36dp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/playlistDataContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Lottie loader -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoader"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        app:lottie_fileName="loader.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_repeatCount="-1"
        app:lottie_enableMergePathsForKitKatAndAbove="true" />

</RelativeLayout>