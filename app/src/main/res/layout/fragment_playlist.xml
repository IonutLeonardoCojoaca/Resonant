<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistFragment"
    android:background="@color/appBackgroundTheme">

    <FrameLayout
        android:id="@+id/playlistHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:id="@+id/arrowGoBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/playlistText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/unageo_regular"
            android:text="Mi lista de reproducción"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlistHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/playlistCollageContainer"
                layout="@layout/playlist_grid_cover"
                android:layout_margin="20dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <RelativeLayout
                android:id="@+id/playlistDataContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playlistCollageContainer">

                <TextView
                    android:id="@+id/playlistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:fontFamily="@font/unageo_bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/playlistOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/playlistName"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="@color/no_selected_color_icon"
                    android:fontFamily="@font/unageo_medium"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:id="@+id/playlistDataWithSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/playlistOwner">

                    <TextView
                        android:id="@+id/playlistDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/no_selected_color_icon"
                        android:fontFamily="@font/unageo_regular"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/separator"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="3dp"
                        android:text="●"
                        android:visibility="invisible"
                        android:layout_toRightOf="@id/playlistDuration"
                        android:textColor="@color/no_selected_color_icon"/>

                    <TextView
                        android:id="@+id/playlistNumberOfTracks"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/separator"
                        android:text=""
                        android:textColor="@color/no_selected_color_icon"
                        android:fontFamily="@font/unageo_regular"
                        android:textSize="13sp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="250dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playlistDataContainer">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/songList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="14dp" />

                <TextView
                    android:id="@+id/noSongsInPlaylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/unageo_regular"
                    android:text="No tienes canciones guardadas en esta playlist."
                    android:textSize="15sp"
                    android:visibility="invisible" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/playlistHeader"
        android:background="@drawable/gradient_playlist_top"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoader"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        app:lottie_fileName="loader.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_repeatCount="-1"
        app:lottie_enableMergePathsForKitKatAndAbove="true" />

</RelativeLayout>