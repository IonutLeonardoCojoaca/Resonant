<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.PlaylistFragment"
    android:background="@color/appBackgroundTheme">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/arrowGoBackButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_marginVertical="10dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playlistText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unageo_medium"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/settingsBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_song_settings_vertical"
                android:clickable="false"
                android:focusable="false" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/playlistCoverImage"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/RoundedCornersAlbumImage"
                android:scaleType="centerCrop"
                android:background="@color/cardsTheme"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <RelativeLayout
                android:id="@+id/playlistDataContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playlistCoverImage">

                <TextView
                    android:id="@+id/playlistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:fontFamily="@font/unageo_bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/playlistOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/playlistName"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="@color/no_selected_color_icon"
                    android:fontFamily="@font/unageo_medium"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:id="@+id/playlistDataWithSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/playlistOwner">

                    <TextView
                        android:id="@+id/playlistDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/no_selected_color_icon"
                        android:fontFamily="@font/unageo_regular"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/separator"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="3dp"
                        android:text="â—"
                        android:visibility="invisible"
                        android:layout_toRightOf="@id/playlistDuration"
                        android:textColor="@color/no_selected_color_icon"/>

                    <TextView
                        android:id="@+id/playlistNumberOfTracks"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/separator"
                        android:text=""
                        android:textColor="@color/no_selected_color_icon"
                        android:fontFamily="@font/unageo_regular"
                        android:textSize="13sp"/>
                </RelativeLayout>

            </RelativeLayout>

            <!-- 3) RV wrap_content + sin nested scroll -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/songList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="250dp"
                android:overScrollMode="never"
                android:paddingHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@+id/playlistDataContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/noSongsInPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_regular"
                android:text="No tienes canciones guardadas en esta playlist."
                android:textSize="15sp"
                android:textColor="@color/no_selected_color_icon"
                android:layout_marginTop="40dp"
                android:visibility="invisible"
                app:layout_constraintTop_toBottomOf="@id/playlistDataContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoader"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        app:lottie_fileName="loader.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_repeatCount="-1"
        app:lottie_enableMergePathsForKitKatAndAbove="true" />

</RelativeLayout>