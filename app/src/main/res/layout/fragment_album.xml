<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AlbumFragment"
    android:background="@color/primaryColorTheme">

    <ImageView
        android:id="@+id/artistImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:alpha="1"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <RelativeLayout
                android:id="@+id/artistBanner"
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <View
                    android:id="@+id/gradientOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_gradient_artist"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/albumDataContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColorTheme"
                android:layout_below="@id/artistBanner">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/albumInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:id="@+id/albumName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2dp"
                        android:paddingEnd="8dp"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        android:fontFamily="@font/unageo_bold"
                        android:hyphenationFrequency="normalFast"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/playButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/albumArtistName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/unageo_regular"
                        android:text=""
                        android:textColor="#8E8E8E"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/playButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/albumName" />

                    <TextView
                        android:id="@+id/albumMetadataText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/unageo_regular"
                        android:text="345345345345"
                        android:textColor="#B0B0B0"
                        android:textSize="13sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingEnd="8dp"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="@+id/albumArtistName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/albumArtistName" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/playButton"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:backgroundTint="@color/secondaryColorTheme"
                        app:cornerRadius="40dp"
                        app:icon="@drawable/ic_play"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="40dp"
                        app:iconTint="@color/white"
                        android:insetBottom="0dp"
                        android:insetTop="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.example.resonant.ui.views.ExpandedRecyclerView
                    android:id="@+id/albumSongsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/albumInfoContainer"
                    android:nestedScrollingEnabled="false"
                    android:paddingHorizontal="10dp"
                    android:paddingBottom="100dp"
                    android:clipToPadding="false"/>

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerSongLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/albumInfoContainer"
                    android:paddingHorizontal="10dp">

                    <LinearLayout
                        android:id="@+id/shimmerSongItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include layout="@layout/item_song_shimmer_placeholder" />
                        <include layout="@layout/item_song_shimmer_placeholder" />
                        <include layout="@layout/item_song_shimmer_placeholder" />
                        <include layout="@layout/item_song_shimmer_placeholder" />

                    </LinearLayout>

                </com.facebook.shimmer.ShimmerFrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    android:layout_below="@id/albumSongsContainer"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:background="#00000000">

        <FrameLayout
            android:id="@+id/arrowGoBackBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_accent_pill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/arrowGoBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_back"
                android:clickable="false"
                android:focusable="false"/>

        </FrameLayout>

        <TextView
            android:id="@+id/albumTopBarText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unageo_bold"
            android:text=""
            android:textAlignment="center"
            android:layout_marginHorizontal="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/favoriteBackground"
            app:layout_constraintStart_toEndOf="@+id/arrowGoBackBackground"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/favoriteBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/favoriteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_favorite_border"
                android:clickable="false"
                android:focusable="false"
                android:scaleX="1.3"
                android:scaleY="1.3" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>