<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorTheme">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/primaryColorTheme"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleMarginBottom="16dp">

            <!-- Fondo con gradiente -->
            <View
                android:id="@+id/viewHeaderBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax" />

            <!-- Overlay oscuro -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_header_overlay"
                app:layout_collapseMode="parallax" />

            <!-- Contenedor para título y chips/descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingBottom="16dp"
                app:layout_collapseMode="parallax">

                <!-- Título -->
                <TextView
                    android:id="@+id/tvChartTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Tendencias"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:fontFamily="@font/unageo_bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvChartSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    tools:text="Lo que está sonando actualmente"
                    android:textColor="@color/white"
                    android:fontFamily="@font/unageo_medium"/>

                <!-- Botones de tipo de Chart -->
                <LinearLayout
                    android:id="@+id/chartTypeButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDaily"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Diario"
                        android:padding="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_medium"
                        app:cornerRadius="20dp"
                        app:backgroundTint="@color/secondaryColorTheme"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWeekly"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:padding="0dp"
                        android:text="Semanal"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_medium"
                        app:cornerRadius="20dp"
                        app:strokeColor="#40FFFFFF"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMonthly"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="Mensual"
                        android:padding="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_medium"
                        app:cornerRadius="20dp"
                        app:strokeColor="#40FFFFFF"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGlobal"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Global"
                        android:padding="0dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_medium"
                        app:cornerRadius="20dp"
                        app:strokeColor="#40FFFFFF"
                        app:strokeWidth="0dp" />

                </LinearLayout>

                <!-- Texto descriptivo para Tendencias (oculto por defecto) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/trendingDescriptionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#20FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#40FFFFFF"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_trending_up"
                            android:layout_marginEnd="12dp"
                            app:tint="#fa8231" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Impulso Viral"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/unageo_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Canciones con crecimiento explosivo en las últimas 24 horas"
                                android:textColor="#CCFFFFFF"
                                android:textSize="12sp"
                                android:fontFamily="@font/unageo_regular" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Toolbar con botón atrás (siempre visible) -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:contentInsetStart="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="8dp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@color/white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/tvToolbarTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingStart="48dp"
                        android:paddingEnd="48dp"
                        tools:text="Top Diario"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/unageo_bold"
                        android:alpha="0" />

                </FrameLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView OPTIMIZADO: Hijo directo con behavior -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSongs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="200dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- ProgressBar -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoader"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        app:lottie_fileName="loader.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_repeatCount="-1"
        app:lottie_enableMergePathsForKitKatAndAbove="true" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>