<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedFragment"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/savedContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/favoritesTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/favoriteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_medium"
                android:text="Favoritos"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="start"/>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/favoriteButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/favoritesTextContainer"
            android:paddingHorizontal="20dp">

            <RelativeLayout
                android:id="@+id/box_view_stroke"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/simple_box_border_background"
                android:layout_centerVertical="true"
                android:paddingHorizontal="15dp">

                <View
                    android:id="@+id/icon_favorite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/favorite"
                    android:layout_centerVertical="true"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_favorite"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/favoriteSongsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favoritos"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_medium"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/totalLikedSongsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/no_selected_color_icon"
                        android:layout_below="@id/favoriteSongsText"
                        android:fontFamily="@font/unageo_regular"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/playlistTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/favoriteButtonContainer"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/playlistText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_medium"
                android:text="Mis playlists"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginVertical="15dp"/>

            <FrameLayout
                android:id="@+id/backgroundAddPlaylistButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/button_interface_background">

                <ImageButton
                    android:id="@+id/addPlaylistButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/containerPlaylistsUser"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@+id/playlistTextContainer">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollPlaylistView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listPlaylistUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/playlistTextContainer"
                    android:paddingHorizontal="20dp">

                </androidx.recyclerview.widget.RecyclerView>

            </androidx.core.widget.NestedScrollView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/playlistIcon"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/playlist_stack"
                    android:alpha="0.8"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No tienes ninguna playlist guardada"
                    android:fontFamily="@font/unageo_medium"
                    android:layout_below="@id/playlistIcon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/paddingEmpty"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">



        </FrameLayout>

    </RelativeLayout>

</FrameLayout>