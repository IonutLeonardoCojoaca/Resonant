<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedFragment"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/savedContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/favoritesTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/favoriteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_medium"
                android:text="Favoritos"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="start"/>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonFavoriteContainer"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_below="@+id/favoritesTextContainer"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/songsButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="14sp"
                app:icon="@drawable/song"
                android:text="Canciones"
                app:rippleColor="@color/ripple_white"
                android:fontFamily="@font/unageo_regular"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:cornerRadius="12dp"
                app:iconTint="@color/white"
                android:textColor="@color/white"
                app:backgroundTint="@color/cardsTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintEnd_toStartOf="@id/artistsButton"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/artistsButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:icon="@drawable/artist"
                android:textSize="14sp"
                app:iconTint="@color/no_selected_color_icon"
                android:textColor="@color/no_selected_color_icon"
                android:text="Artistas"
                android:padding="10dp"
                android:fontFamily="@font/unageo_regular"
                app:iconGravity="top"
                app:iconSize="30dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/cardsTheme"
                app:layout_constraintStart_toEndOf="@id/songsButton"
                app:layout_constraintEnd_toStartOf="@id/albumsButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/albumsButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                app:icon="@drawable/album"
                android:textSize="14sp"
                android:text="Álbumes"
                android:padding="10dp"
                android:fontFamily="@font/unageo_regular"
                app:iconGravity="top"
                app:iconSize="32dp"
                app:iconTint="@color/no_selected_color_icon"
                android:textColor="@color/no_selected_color_icon"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/cardsTheme"
                app:layout_constraintStart_toEndOf="@id/artistsButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/playlistTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonFavoriteContainer"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/playlistText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_medium"
                android:text="Listas de reproducción"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginVertical="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/createPlaylistButton"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|end"
                app:icon="@drawable/add"
                app:rippleColor="@color/ripple_white"
                app:iconGravity="top"
                app:iconSize="25dp"
                app:cornerRadius="12dp"
                app:iconTint="@color/white"
                app:backgroundTint="@color/cardsTheme"/>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/containerPlaylistsUser"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_below="@+id/playlistTextContainer">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollPlaylistView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listPlaylistUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/playlistTextContainer"
                    android:paddingHorizontal="20dp">

                </androidx.recyclerview.widget.RecyclerView>

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tienes ninguna playlist guardada"
                android:fontFamily="@font/unageo_medium"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/paddingEmpty"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true">


        </FrameLayout>

    </RelativeLayout>

</FrameLayout>