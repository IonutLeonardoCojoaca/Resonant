<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginVertical="4dp"
    android:background="@color/black">

    <View
        android:id="@+id/view3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/album_background_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationY="-5dp"
        android:translationX="7dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/albumImage"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCornersImage">

    </com.google.android.material.imageview.ShapeableImageView>

    <RelativeLayout
        android:id="@+id/albumDataContainer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp">

        <TextView
            android:id="@+id/albumTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/unageo_bold"
            android:text="Album name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/dataType"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:text="Álbum"
            android:textSize="12sp"
            android:textColor="#BDBDBD"
            android:fontFamily="@font/unageo_medium"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:text="●"
            android:layout_alignParentBottom="true"
            android:textColor="#BDBDBD"
            android:layout_toRightOf="@id/dataType"/>

        <TextView
            android:id="@+id/albumArtistName"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="Artist"
            android:fontFamily="@font/unageo_regular"
            android:textColor="#BDBDBD"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/separator"
            android:maxLines="1"
            android:ellipsize="end"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>