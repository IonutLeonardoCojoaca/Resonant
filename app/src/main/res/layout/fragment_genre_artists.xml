<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.GenreArtistsFragment"
    android:background="@color/primaryColorTheme">

    <!-- Genre Header with Gradient Background -->
    <View
        android:id="@+id/genreImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <!-- Genre Banner -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/genreBanner"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <!-- Gradient Overlay -->
                <View
                    android:id="@+id/gradientOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.7"
                    android:background="@drawable/bg_gradient_artist"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Genre Name -->
                <TextView
                    android:id="@+id/genreName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:paddingEnd="10dp"
                    android:breakStrategy="simple"
                    android:ellipsize="end"
                    android:fontFamily="@font/unageo_bold"
                    android:hyphenationFrequency="normalFast"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/artistsCount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Artists Count -->
                <TextView
                    android:id="@+id/artistsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/unageo_medium"
                    android:text="0 artistas"
                    android:textColor="#CCFFFFFF"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Artists Content Container -->
            <RelativeLayout
                android:id="@+id/artistsDataContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColorTheme"
                android:paddingBottom="100dp"
                android:layout_below="@id/genreBanner">

                <!-- Loading Indicator -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:indeterminate="true"
                    app:indicatorColor="@color/secondaryColorTheme"
                    app:trackColor="@color/discTheme"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <!-- Artists Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/artistsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="200dp"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="15dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:listitem="@layout/item_artist"/>

                <!-- Empty State -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/emptyStateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="60dp"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <ImageView
                        android:id="@+id/emptyStateIcon"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_user"
                        android:alpha="0.3"
                        android:tint="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/emptyStateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="No hay artistas en este gÃ©nero"
                        android:textColor="#99FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="@font/unageo_medium"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@+id/emptyStateIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:background="#00000000">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/arrowGoBackBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_arrow_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/arrowGoBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_back"
                android:clickable="false"
                android:focusable="false"/>

        </FrameLayout>

        <!-- Genre Name Top Bar -->
        <TextView
            android:id="@+id/genreTopBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unageo_bold"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Gradient Below Top Bar -->
    <View
        android:id="@+id/gradientTopBar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/bg_gradient_playlist_top"
        android:layout_below="@id/topBar"
        android:visibility="invisible"/>

</RelativeLayout>
