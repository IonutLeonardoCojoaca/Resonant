<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_advise_fragment"
        android:padding="20dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unageo_bold"
            android:gravity="center"
            android:text="Título"
            android:textColor="@color/primaryColorButton"
            android:textSize="20sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dialogTitle"
            android:layout_marginVertical="10dp"
            android:background="@color/numberTime" />

        <TextView
            android:id="@+id/dialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:fontFamily="@font/unageo_medium"
            android:gravity="center"
            android:text="Mensaje del diálogo"
            android:textColor="@color/primaryColorButton"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogMessage"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/discTheme"
                android:fontFamily="@font/unageo_bold"
                android:text="Cancelar"
                android:textColor="@color/primaryColorButton"
                android:layout_marginEnd="5dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/secondaryColorTheme"
                android:fontFamily="@font/unageo_bold"
                android:text="Aceptar"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>