<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_song_background"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginVertical="4dp">

    <FrameLayout
        android:id="@+id/item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadingAnimation"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                app:lottie_fileName="loader.json"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:visibility="gone"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/songImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                app:shapeAppearanceOverlay="@style/RoundedCornersImage"
                android:alpha="0.8"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/songImage"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="8dp"
                android:descendantFocusability="blocksDescendants">

            <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/likeButton"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="16sp"
                    android:fontFamily="@font/unageo_medium"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/dataType"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Canción"
                    android:textSize="12sp"
                    android:fontFamily="@font/unageo_medium"
                    android:textColor="#BDBDBD"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:text="●"
                    android:layout_alignParentBottom="true"
                    android:textColor="#BDBDBD"
                    android:layout_toRightOf="@id/dataType"/>

                <TextView
                    android:id="@+id/songArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_toLeftOf="@id/likeButton"
                    android:textColor="#BDBDBD"
                    android:text=""
                    android:textSize="12sp"
                    android:fontFamily="@font/unageo_medium"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/separator"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ImageButton
                    android:id="@+id/likeButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/favorite_border"/>

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
