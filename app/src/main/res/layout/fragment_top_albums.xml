<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorTheme">

    <!-- FIXED TOP BAR -->
    <RelativeLayout
        android:id="@+id/topBarContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="12dp"
        android:background="@color/primaryColorTheme">

        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_accent_pill">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/ic_arrow_back"
                android:clickable="false"
                android:focusable="false" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Top Álbumes"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/unageo_bold" />

    </RelativeLayout>

    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBarContainer"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120dp">

            <!-- TABS -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabIndicatorColor="@color/secondaryColorTheme"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="#80FFFFFF"
                app:tabTextAppearance="@style/CustomTabTextAppearance"
                app:tabMode="fixed"
                app:tabGravity="fill"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- FEATURED ALBUM SECTION (TOP 1) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/featuredAlbumCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#1A1A1A">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Album Cover -->
                    <ImageView
                        android:id="@+id/featuredAlbumImage"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_playlist_stack"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Gradient Overlay -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@drawable/gradient_bottom_overlay"
                        app:layout_constraintTop_toTopOf="@id/featuredAlbumImage"
                        app:layout_constraintBottom_toBottomOf="@id/featuredAlbumImage" />

                    <!-- Rank Badge -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_bold"
                        android:background="@drawable/bg_rank_badge_gold"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="6dp"
                        android:layout_margin="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- Album Details -->
                    <TextView
                        android:id="@+id/featuredAlbumName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textSize="26sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_bold"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="4dp"
                        app:layout_constraintBottom_toTopOf="@+id/featuredAlbumArtist"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/featuredAlbumArtist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Artista"
                        android:textSize="16sp"
                        android:textColor="#CCFFFFFF"
                        android:fontFamily="@font/unageo_medium"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/btnViewFeatured"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewFeatured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver Álbum"
                        android:textColor="@color/white"
                        android:fontFamily="@font/unageo_bold"
                        android:backgroundTint="@color/secondaryColorTheme"
                        android:layout_marginBottom="24dp"
                        android:layout_marginEnd="16dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:cornerRadius="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Más Álbumes en el Ranking"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/unageo_bold"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="12dp" />

            <!-- LIST OF OTHER ALBUMS -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTopAlbums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="200dp"
                android:overScrollMode="never" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading overlay -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoader"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        app:lottie_fileName="loader.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:visibility="gone" />

</RelativeLayout>
