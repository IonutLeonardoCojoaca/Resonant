<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ArtistFragment"
    android:background="@color/primaryColorTheme">

    <ImageView
        android:id="@+id/artistImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:alpha="1"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/artistBanner"
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <View
                    android:id="@+id/gradientOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_gradient_artist"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="15dp"
                    android:paddingEnd="10dp"
                    android:breakStrategy="simple"
                    android:ellipsize="end"
                    android:fontFamily="@font/unageo_bold"
                    android:hyphenationFrequency="normalFast"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="44sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/playButton"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playButton"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_margin="15dp"
                    android:backgroundTint="@color/secondaryColorTheme"
                    app:cornerRadius="40dp"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="40dp"
                    app:iconTint="@color/white"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/artistDataContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColorTheme"
                android:paddingBottom="160dp"
                android:layout_below="@id/artistBanner">

                <LinearLayout
                    android:id="@+id/descriptionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="12dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/artistDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14sp"
                        android:lineSpacingExtra="5dp"
                        android:fontFamily="@font/unageo_medium"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp"
                        tools:text="Descripción larga del artista para ver cómo queda dentro de la tarjeta..."
                        tools:visibility="visible"/>

                    <!-- Galería oculta por defecto, se muestra al expandir -->
                    <LinearLayout
                        android:id="@+id/galleryContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Galería"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:fontFamily="@font/unageo_bold"
                            android:layout_marginBottom="10dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/galleryRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:clipToPadding="false"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReadMore"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:text="Más info"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:fontFamily="@font/unageo_medium"
                        android:backgroundTint="@color/discTheme"
                        app:cornerRadius="25dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="28dp"
                        app:icon="@drawable/ic_keyboard_arrow_down"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:iconSize="16dp"
                        android:visibility="gone"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        tools:visibility="visible"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/smartPlaylistsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/descriptionContainer"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creado por Resonant"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/unageo_medium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/smartPlaylistsRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:paddingHorizontal="15dp"
                        android:clipToPadding="false"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/listSongsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/smartPlaylistsContainer">

                    <FrameLayout
                        android:id="@+id/titleTopSongsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/titleTopSongs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/unageo_medium"
                            android:text="Canciones populares"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical|left"/>
                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/topSongsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"
                        android:paddingHorizontal="10dp"
                        android:layout_marginVertical="5dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSeeMoreSongs"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="10dp"
                        android:text="Ver todo"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:fontFamily="@font/unageo_medium"
                        android:backgroundTint="@color/discTheme"
                        app:cornerRadius="25dp"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="24dp"
                        app:icon="@drawable/ic_keyboard_arrow_down"
                        app:iconGravity="textEnd"
                        app:iconTint="@color/white"
                        app:iconSize="16dp"
                        android:visibility="gone"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        tools:visibility="visible"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/albumFeatured"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/listSongsContainer">

                    <FrameLayout
                        android:id="@+id/titleFeaturedAlbumContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/titleFeaturedAlbum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/unageo_medium"
                            android:text="Destacado"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical|left"/>

                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/featuredAlbumList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleFeaturedAlbumContainer"
                        android:paddingHorizontal="10dp"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none">

                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/listAlbums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/albumFeatured">

                    <FrameLayout
                        android:id="@+id/titleAlbumsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp">

                        <TextView
                            android:id="@+id/titleAlbumSongs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/unageo_medium"
                            android:text="Álbumes del artista"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical|left"/>

                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listAlbumsRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/titleAlbumsContainer"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"
                        android:paddingHorizontal="5dp"
                        android:clipToPadding="true">

                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:background="#00000000">

        <FrameLayout
            android:id="@+id/arrowGoBackBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_accent_pill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/arrowGoBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_gravity="center"
                android:background="@drawable/ic_arrow_back"
                android:clickable="false"
                android:focusable="false"/>

        </FrameLayout>

        <TextView
            android:id="@+id/albumTopBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unageo_bold"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/favoriteBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/favoriteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_favorite_border"
                android:clickable="false"
                android:focusable="false"
                android:scaleX="1.3"
                android:scaleY="1.3" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/gradientTopBar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/bg_gradient_playlist_top"
        android:layout_below="@id/topBar"
        android:visibility="invisible"/>

</RelativeLayout>