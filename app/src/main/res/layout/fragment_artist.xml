<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistFragment"
    android:background="@color/black">

    <ImageView
        android:id="@+id/artistImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:alpha="1"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="120dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <RelativeLayout
                android:id="@+id/artistBanner"
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <View
                    android:id="@+id/gradientOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/gradient_artist"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp"
                    android:breakStrategy="simple"
                    android:fontFamily="@font/unageo_bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:hyphenationFrequency="normalFast"
                    android:text=". . ."
                    android:textColor="@android:color/white"
                    android:textSize="45sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/artistDataContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_below="@id/artistBanner">

                <FrameLayout
                    android:id="@+id/albumTextContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="15dp">

                    <TextView
                        android:id="@+id/albumsFeatured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/unageo_medium"
                        android:text="MÃºsica del artista"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical|left"/>

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/listAlbums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/albumTextContainer">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listAlbumsRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"
                        android:paddingHorizontal="20dp">

                    </androidx.recyclerview.widget.RecyclerView>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="20dp">

                        <LinearLayout
                            android:id="@+id/shimmerInclude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include layout="@layout/item_album_2_shimmer_placeholder" />
                            <include layout="@layout/item_album_2_shimmer_placeholder" />
                            <include layout="@layout/item_album_2_shimmer_placeholder" />

                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:layout_below="@id/listAlbums"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingHorizontal="20dp">

        <ImageButton
            android:id="@+id/arrowGoBackButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/arrow_back"
            android:layout_gravity="center|left"/>

        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center|right"
            android:background="@drawable/favorite_border"
            android:visibility="invisible"/>

    </FrameLayout>

</RelativeLayout>