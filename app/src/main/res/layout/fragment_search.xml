<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/appBackgroundTheme">

        <RelativeLayout
            android:id="@+id/inputSearchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/titleSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Búsqueda"
                android:fontFamily="@font/unageo_medium"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/titleSearch"
                android:layout_margin="10dp"
                android:background="@drawable/search_bar_background"
                app:startIconDrawable="@drawable/search"
                app:startIconTint="@color/white"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                android:padding="0dp"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextQuery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="Canción, artista, álbum . . ."
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="#9B9B9B"
                    android:fontFamily="@font/unageo_medium"
                    android:maxLines="1"
                    android:imeOptions="actionSearch"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:layout_below="@id/inputSearchContainer">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSongs"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Canciones"
                android:checkable="true"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:fontFamily="@font/unageo_medium"
                app:chipStrokeColor="@color/transparent"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:chipCornerRadius="35dp"
                app:checkedIconVisible="true"
                app:rippleColor="@android:color/transparent"
                app:useMaterialThemeColors="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAlbums"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginHorizontal="10dp"
                android:text="Álbumes"
                android:checkable="true"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:fontFamily="@font/unageo_medium"
                app:chipStrokeColor="@color/transparent"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:chipCornerRadius="35dp"
                app:checkedIconVisible="true"
                app:rippleColor="@android:color/transparent"
                app:useMaterialThemeColors="false" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipArtists"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Artistas"
                android:checkable="true"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:fontFamily="@font/unageo_medium"
                app:chipStrokeColor="@color/transparent"
                app:chipBackgroundColor="@color/chip_filter_background"
                app:chipCornerRadius="35dp"
                app:checkedIconVisible="true"
                app:rippleColor="@android:color/transparent"
                app:useMaterialThemeColors="false" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/listSongsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filterContainer">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filteredListResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="14dp"
                android:paddingBottom="160dp">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:id="@+id/emptyPadding"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/song_list_gradient_bottom"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:lottie_fileName="loader.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/noSongFoundedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No se han encontrado canciones"
        android:textColor="@color/numberTime"
        android:paddingHorizontal="20dp"
        android:visibility="invisible"/>

</FrameLayout>