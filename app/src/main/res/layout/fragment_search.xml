<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/appBackgroundTheme">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:paddingHorizontal="15dp">

            <EditText
                android:id="@+id/editTextQuery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:inputType="text"
                android:paddingHorizontal="20dp"
                android:textColor="@color/white"
                android:textColorHint="#9B9B9B"
                android:fontFamily="@font/unageo_medium"
                android:hint="Busca tu canciÃ³n"
                android:background="@drawable/search_bar_background"
                android:maxLines="1"
                android:imeOptions="actionSearch"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filteredListSongs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:paddingHorizontal="10dp"
                android:layout_centerHorizontal="true">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/noSongsFounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No se encontraron canciones"
                android:layout_centerInParent="true"
                android:fontFamily="@font/unageo_medium"
                android:visibility="visible"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/song_list_gradient_bottom"
                android:layout_alignParentBottom="true">

            </View>

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>