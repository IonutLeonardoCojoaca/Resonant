<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/appBackgroundTheme">

        <FrameLayout
            android:id="@+id/searchTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/artistFeatured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_medium"
                android:text="Búsqueda avanzada"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="start"/>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inputSearchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchTextContainer"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/search_bar_background"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/search"
                app:startIconTint="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextQuery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/unageo_medium"
                    android:hint="Canción, artista, álbum . . ."
                    android:textSize="15dp"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:textColor="@color/white"
                    android:textColorHint="#9B9B9B" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputSearchContainer"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="5dp"
            android:scrollbars="none"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/chipGroupContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:checkable="true"
                    android:checked="true"
                    android:text="Canciones"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/chip_filter_background"
                    app:chipCornerRadius="35dp"
                    app:chipStrokeColor="@color/transparent"
                    app:fontFamily="@font/unageo_medium"
                    app:rippleColor="@android:color/transparent"
                    app:useMaterialThemeColors="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAlbums"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:checkable="true"
                    android:checked="true"
                    android:text="Álbumes"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/chip_filter_background"
                    app:chipCornerRadius="35dp"
                    app:chipStrokeColor="@color/transparent"
                    app:fontFamily="@font/unageo_medium"
                    app:rippleColor="@android:color/transparent"
                    app:useMaterialThemeColors="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipArtists"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:checkable="true"
                    android:checked="true"
                    android:text="Artistas"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/chip_filter_background"
                    app:chipCornerRadius="35dp"
                    app:chipStrokeColor="@color/transparent"
                    app:fontFamily="@font/unageo_medium"
                    app:rippleColor="@android:color/transparent"
                    app:useMaterialThemeColors="false" />

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/inputSearchContainer"
            android:paddingHorizontal="10dp">

            <View
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_artist"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:rotation="-90"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/listSongsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filterContainer"
            android:layout_marginTop="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filteredListResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="14dp"
                android:paddingBottom="160dp"
                android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
                android:fadeScrollbars="false">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:lottie_fileName="loader.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/noSongFoundedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No se han encontrado canciones"
        android:textColor="@color/numberTime"
        android:paddingHorizontal="20dp"
        android:visibility="invisible"/>

</FrameLayout>