<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SearchFragment"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/superiorToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_s_resonant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unageo_bold"
            android:text="Búsqueda"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircularUserImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/appBackgroundTheme"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/superiorToolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/inputSearchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_search_bar"
                app:boxBackgroundMode="none"
                app:endIconMode="clear_text"
                app:endIconTint="@color/white"
                app:hintEnabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="#AAAAAA">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextQuery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/unageo_medium"
                    android:hint="Busca canciones, artistas, álbumes . . ."
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="0dp"
                    android:textColor="@color/white"
                    android:textColorHint="#9B9B9B"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:id="@+id/filterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputSearchContainer"
            android:layout_marginHorizontal="5dp"
            android:overScrollMode="never"
            android:paddingHorizontal="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/chipGroupContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:checkable="true"
                    android:checked="true"
                    android:text="Canciones"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/chip_filter_background"
                    app:chipCornerRadius="35dp"
                    app:chipStrokeColor="@color/transparent"
                    app:fontFamily="@font/unageo_medium"
                    app:rippleColor="@android:color/transparent"
                    app:useMaterialThemeColors="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAlbums"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:checkable="true"
                    android:checked="true"
                    android:text="Álbumes"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/chip_filter_background"
                    app:chipCornerRadius="35dp"
                    app:chipStrokeColor="@color/transparent"
                    app:fontFamily="@font/unageo_medium"
                    app:rippleColor="@android:color/transparent"
                    app:useMaterialThemeColors="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipArtists"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:checkable="true"
                    android:checked="true"
                    android:text="Artistas"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:checkedIconVisible="true"
                    app:chipBackgroundColor="@color/chip_filter_background"
                    app:chipCornerRadius="35dp"
                    app:chipStrokeColor="@color/transparent"
                    app:fontFamily="@font/unageo_medium"
                    app:rippleColor="@android:color/transparent"
                    app:useMaterialThemeColors="false" />

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/inputSearchContainer"
            android:paddingHorizontal="5dp">

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_gradient_artist"
                android:rotation="-90" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/listSongsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/filterContainer"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filterContainer">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/historyRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="14dp"
                android:paddingBottom="160dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suggestionsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="14dp"
                android:paddingBottom="160dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filteredListResults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fadeScrollbars="false"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="5dp"
                android:paddingBottom="160dp"
                android:scrollbarThumbVertical="@drawable/bg_scrollbar_thumb"
                android:scrollbars="vertical"
                android:visibility="invisible" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadingAnimation"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:lottie_autoPlay="true"
                app:lottie_fileName="loader.json"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/noSongFoundedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="20dp"
                android:text="No se han encontrado canciones"
                android:textColor="@color/numberTime"
                android:visibility="invisible" />

        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>