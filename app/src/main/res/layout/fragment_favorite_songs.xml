<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteSongsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FavoriteSongsActivity"
        android:background="@color/black">

        <FrameLayout
            android:id="@+id/containerFavoriteSongs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/favoriteSongsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tus canciones favoritas"
                android:fontFamily="@font/unageo_medium"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </FrameLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnimation"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:lottie_fileName="animation_s.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/noLikedSongsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes ninguna canciÃ³n guardada en favoritos"
            android:fontFamily="@font/unageo_medium"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollFavoriteSongs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/containerFavoriteSongs">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favoriteSongsList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="14dp">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</FrameLayout>