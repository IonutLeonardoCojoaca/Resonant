<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorTheme">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/primaryColorTheme"
            app:expandedTitleTextColor="@android:color/transparent">

            <!-- Artist/Cover Image with parallax -->
            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.65"
                tools:src="@drawable/ic_disc" />

            <!-- Heavy bottom gradient for readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_smart_playlist_header" />

            <!-- Top gradient for status bar -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:background="@drawable/gradient_smart_playlist_top" />

            <!-- Dark overlay for cinematic effect -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#30000000" />

            <!-- Header content overlay (title + artist at bottom of image) -->
            <LinearLayout
                android:id="@+id/headerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:paddingHorizontal="24dp"
                android:paddingBottom="20dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.4">

                <!-- Accent line (colored bar that identifies playlist type) -->
                <View
                    android:id="@+id/accentLine"
                    android:layout_width="40dp"
                    android:layout_height="3dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/secondaryColorTheme" />

                <!-- Upper label: "RESONANT · ESSENTIALS" or "RESONANT · RADIO" -->
                <TextView
                    android:id="@+id/playlistLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESONANT"
                    android:textSize="11sp"
                    android:fontFamily="@font/unageo_bold"
                    android:textColor="#99FFFFFF"
                    android:letterSpacing="0.2"
                    android:layout_marginBottom="6dp" />

                <!-- Playlist Title (large) -->
                <TextView
                    android:id="@+id/playlistTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imprescindibles"
                    android:textSize="34sp"
                    android:fontFamily="@font/unageo_extra_bold"
                    android:textColor="@color/white"
                    android:lineSpacingMultiplier="0.9"
                    android:layout_marginBottom="4dp" />

                <!-- Artist Name subtitle -->
                <TextView
                    android:id="@+id/artistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist Name"
                    android:textSize="17sp"
                    android:fontFamily="@font/unageo_light"
                    android:textColor="#B3FFFFFF"
                    android:layout_marginBottom="10dp" />

                <!-- Song count pill badge -->
                <TextView
                    android:id="@+id/songCountBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 canciones"
                    android:textSize="12sp"
                    android:fontFamily="@font/unageo_medium"
                    android:textColor="#CCFFFFFF"
                    android:background="@drawable/bg_accent_pill"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>

            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:background="@android:color/transparent"
                app:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStartWithNavigation="0dp"
                android:contentInsetStart="0dp"
                android:contentInsetLeft="0dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:id="@+id/arrowGoBackButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/bg_accent_pill"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="@color/white" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0"
                        android:fontFamily="@font/unageo_bold"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:text="Imprescindibles" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable content below the header -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp">

            <!-- Play / Shuffle button row -->
            <LinearLayout
                android:id="@+id/actionButtonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlay"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="Reproducir"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:fontFamily="@font/unageo_bold"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_play"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    app:backgroundTint="@color/secondaryColorTheme"
                    app:cornerRadius="26dp"
                    android:layout_marginEnd="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShuffle"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="Aleatorio"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:fontFamily="@font/unageo_medium"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_random"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="26dp"
                    android:background="@drawable/bg_shuffle_button"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

            <!-- Song list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/songList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="10dp"
                android:paddingBottom="100dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_song" />

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/emptyStateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="60dp"
                android:paddingBottom="60dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_disc"
                    android:alpha="0.3"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay canciones disponibles"
                    android:textSize="15sp"
                    android:fontFamily="@font/unageo_medium"
                    android:textColor="#66FFFFFF"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Animation (centered) -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
