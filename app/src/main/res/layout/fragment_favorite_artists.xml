<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteArtistsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <FrameLayout
            android:id="@+id/containerFavoriteAlbums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/favoriteAlbumsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tus artistas favoritos"
                android:fontFamily="@font/unageo_medium"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </FrameLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnimation"
            android:layout_width="240dp"
            android:layout_height="240dp"
            app:lottie_fileName="loader.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/noLikedAlbumsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes ningÃºn artista favorito"
            android:fontFamily="@font/unageo_medium"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favoriteAlbumsList"
            android:layout_below="@id/containerFavoriteAlbums"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="250dp"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="14dp"
            android:visibility="gone"/>

    </RelativeLayout>
</FrameLayout>