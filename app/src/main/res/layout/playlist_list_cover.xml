<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img0"
        style="@style/PlaylistCoverImage.List"
        app:shapeAppearance="@style/ShapeAppearance.Resonant.Corner.List.TopLeft" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img1"
        style="@style/PlaylistCoverImage.List"
        app:shapeAppearance="@style/ShapeAppearance.Resonant.Corner.List.TopRight" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img2"
        style="@style/PlaylistCoverImage.List"
        app:shapeAppearance="@style/ShapeAppearance.Resonant.Corner.List.BottomLeft" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img3"
        style="@style/PlaylistCoverImage.List"
        app:shapeAppearance="@style/ShapeAppearance.Resonant.Corner.List.BottomRight" />

</GridLayout>