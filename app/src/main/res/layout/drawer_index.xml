<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sideBar"
    android:paddingTop="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/headerUserPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_user"
            android:scaleType="centerCrop"
            android:padding="2dp"
            app:shapeAppearanceOverlay="@style/CircularUserImage"
            app:strokeColor="@color/secondaryColorTheme"
            app:strokeWidth="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@+id/headerUserPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/headerUserPhoto"
            app:layout_constraintBottom_toBottomOf="@+id/headerUserPhoto">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRO"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:fontFamily="@font/unageo_bold"
                android:background="@drawable/bg_pro_badge"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/headerUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_bold"
                android:text="Usuario"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1AFFFFFF"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/headerDrawer"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"
        android:paddingBottom="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/separator"
        app:layout_constraintBottom_toTopOf="@+id/footerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Navegación"
                android:fontFamily="@font/unageo_bold"
                android:textColor="#66FFFFFF"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:paddingStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/homeButton"
                style="@style/DrawerItemStyle"
                android:text="Inicio"
                app:drawableStartCompat="@drawable/ic_menu_home" />

            <TextView
                android:id="@+id/searchButton"
                style="@style/DrawerItemStyle"
                android:text="Buscar"
                app:drawableStartCompat="@drawable/ic_search" />

            <TextView
                android:id="@+id/exploreButton"
                style="@style/DrawerItemStyle"
                android:text="Descubrir"
                app:drawableStartCompat="@drawable/ic_menu_explore" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mi Música"
                android:fontFamily="@font/unageo_bold"
                android:textColor="#66FFFFFF"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:paddingStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/savedButton"
                style="@style/DrawerItemStyle"
                android:text="Biblioteca"
                app:drawableStartCompat="@drawable/ic_menu_saved" />

            <TextView
                android:id="@+id/downloadsButton"
                style="@style/DrawerItemStyle"
                android:text="Descargas offline"
                app:drawableStartCompat="@drawable/ic_download" />

            <TextView
                android:id="@+id/historyButton"
                style="@style/DrawerItemStyle"
                android:text="Historial de escucha"
                app:drawableStartCompat="@drawable/ic_recent" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sistema"
                android:fontFamily="@font/unageo_bold"
                android:textColor="#66FFFFFF"
                android:textSize="11sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:paddingStart="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/settingsButton"
                style="@style/DrawerItemStyle"
                android:text="Ajustes y Privacidad"
                app:drawableStartCompat="@drawable/ic_settings_selected" />

            <TextView
                android:id="@+id/logoutButton"
                style="@style/DrawerItemStyle"
                android:text="Cerrar sesión"
                app:drawableStartCompat="@drawable/ic_logout" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_resonant_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resonant 2.0.0"
            android:textColor="#4DFFFFFF"
            android:textSize="11sp"
            android:fontFamily="@font/unageo_medium"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>