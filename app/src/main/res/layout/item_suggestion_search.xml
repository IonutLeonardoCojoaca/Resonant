<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_song_background"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginVertical="4dp"
    android:paddingHorizontal="5dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_search"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/suggestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:fontFamily="@font/unageo_regular"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:text="Future"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/suggestionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/suggestionText"
            android:ellipsize="end"
            android:fontFamily="@font/unageo_regular"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:text="Artista"
            android:textColor="@color/numberTime"
            android:textSize="13sp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
