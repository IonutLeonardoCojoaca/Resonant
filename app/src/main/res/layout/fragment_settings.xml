<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/settingsTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/settingsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unageo_medium"
                android:text="Ajustes"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="start"/>

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/clearCacheButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/settingsTextContainer"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <ImageButton
                android:id="@+id/layoutBackground2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/item_settings_button"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iconTrash"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/delete_icon"
                    android:layout_marginRight="10dp"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_toRightOf="@id/iconTrash"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Borrar caché"
                        android:fontFamily="@font/unageo_medium"
                        android:layout_gravity="top"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:textSize="12sp"
                        android:fontFamily="@font/unageo_medium"
                        android:text="Borra los datos para mejorar el rendimiento de la apliacación"/>

                </FrameLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clearCacheButton"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp">

            <ImageButton
                android:id="@+id/layoutBackground"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/item_settings_button"/>

            <RelativeLayout
                android:id="@+id/signOutButton"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iconSignOut"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/signout"
                    android:layout_marginRight="10dp"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_toRightOf="@id/iconSignOut"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cerrar Sesión"
                        android:fontFamily="@font/unageo_medium"
                        android:layout_gravity="top"
                        android:textSize="14sp"
                        android:textColor="@color/errorColorText"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/errorColorText"
                        android:layout_gravity="bottom"
                        android:textSize="12sp"
                        android:fontFamily="@font/unageo_medium"
                        android:text="Tendrás que volver a iniciar sesión para poder escuchar tus canciones guardadas"/>

                </FrameLayout>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="185dp"
            android:layout_height="185dp"
            android:background="@drawable/resonant_black"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:alpha="0.2"/>

    </RelativeLayout>

</FrameLayout>