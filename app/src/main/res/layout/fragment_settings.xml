<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SettingsFragment"
    android:background="@color/primaryColorTheme"
    android:paddingHorizontal="20dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/unageo_regular"
        android:text="Ajustes"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_playback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/unageo_bold"
        android:text="Reproducción"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/secondaryColorTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_settings" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_automix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/unageo_medium"
        android:text="Automix"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/automix_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_playback" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subtitle_automix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/unageo_medium"
        android:text="Elimina el silencio entre canciones de un mismo álbum."
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/automix_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_automix" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/automix_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/subtitle_automix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_automix"
        app:thumbTint="@color/switch_thumb_selector"
        app:trackTint="@color/switch_track_selector" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_crossfade_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/unageo_medium"
        android:text="Crossfade"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle_automix" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_crossfade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/unageo_regular"
        android:text="Duración del fundido (0s = desactivado)"
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/crossfade_value_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_crossfade_section" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/crossfade_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/unageo_medium"
        android:textColor="@color/secondaryColorTheme"
        app:layout_constraintBaseline_toBaselineOf="@id/label_crossfade"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="5 s" />

    <com.google.android.material.slider.Slider
        android:id="@+id/crossfade_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stepSize="1.0"
        android:value="5.0"
        android:valueFrom="0.0"
        android:valueTo="12.0"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_crossfade" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_mode_crossfade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/unageo_regular"
        android:text="Modo de fundido"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crossfade_slider" />

    <LinearLayout
        android:id="@+id/crossfade_mode_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/label_mode_crossfade">

        <androidx.cardview.widget.CardView
            android:id="@+id/mode_soft_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/card_toggle_background"
            app:strokeColor="@color/card_toggle_stroke">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:src="@drawable/ic_spectrogram_soft"
                app:tint="@color/card_toggle_icon_tint" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mode_fast_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@color/card_toggle_background"
            app:strokeColor="@color/card_toggle_stroke">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:src="@drawable/ic_spectrogram_cut"
                app:tint="@color/card_toggle_icon_tint" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_intelligent_crossfade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/unageo_medium"
        android:text="Crossfade inteligente - Beta"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/intelligent_crossfade_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crossfade_mode_group" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subtitle_intelligent_crossfade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/unageo_medium"
        android:text="Ecualizador, BPM, tonalidades y acustica implementada."
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/intelligent_crossfade_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_intelligent_crossfade" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/intelligent_crossfade_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/subtitle_intelligent_crossfade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_intelligent_crossfade"
        app:thumbTint="@color/switch_thumb_selector"
        app:trackTint="@color/switch_track_selector" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_sound"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/unageo_bold"
        android:text="Sonido"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/secondaryColorTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_intelligent_crossfade" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_normalization"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/unageo_medium"
        android:text="Normalización de audio"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/normalization_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_sound" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/subtitle_normalization"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/unageo_medium"
        android:text="Ajusta el volumen automáticamente según el loudness de cada canción."
        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/normalization_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_normalization" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/normalization_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/subtitle_normalization"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/label_normalization"
        app:thumbTint="@color/switch_thumb_selector"
        app:trackTint="@color/switch_track_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>