<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColorTheme">

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="16dp">

            <FrameLayout
                android:id="@+id/arrowGoBackButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_circle_transparent"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white" />

            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos los Géneros"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/unageo_bold"
                app:layout_constraintStart_toEndOf="@id/arrowGoBackButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Genre List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAllGenres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="8dp"
                android:paddingBottom="200dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_genre"
                android:layoutAnimation="@anim/layout_animation_fall_down"/>
                
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/secondaryColorTheme"/>

            <!-- Error View -->
            <LinearLayout
                android:id="@+id/layoutError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center">
                
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_error"
                    app:tint="@color/textTheme" />
                    
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Error al cargar géneros"
                    android:textColor="@color/textTheme"
                    android:layout_marginTop="8dp" />
                    
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRetry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reintentar"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
