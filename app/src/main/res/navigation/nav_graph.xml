<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.resonant.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
        <action
            android:id="@+id/action_homeFragment_to_artistFragment"
            app:destination="@id/artistFragment" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.resonant.SearchFragment"
        android:label="Buscar"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_savedFragment"
            app:destination="@id/savedFragment" />

        <action
            android:id="@+id/action_searchFragment_to_albumFragment"
            app:destination="@id/albumFragment" />

        <action
            android:id="@+id/action_searchFragment_to_artistFragment"
            app:destination="@id/artistFragment" />
    </fragment>

    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.resonant.SavedFragment"
        android:label="Guardados"
        tools:layout="@layout/fragment_saved">

        <action
            android:id="@+id/action_savedFragment_to_favoriteSongsFragment"
            app:destination="@id/favoriteSongsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.resonant.SettingsFragment"
        android:label="Perfil"
        tools:layout="@layout/fragment_settings"/>

    <fragment
        android:id="@+id/favoriteSongsFragment"
        android:name="com.example.resonant.FavoriteSongsFragment"
        android:label="Canciones favoritas"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteSongsFragment_to_savedFragment"
            app:destination="@id/savedFragment" />
    </fragment>

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.resonant.AlbumFragment"
        android:label="Album"
        tools:layout="@layout/fragment_album"/>

    <fragment
        android:id="@+id/artistFragment"
        android:name="com.example.resonant.ArtistFragment"
        android:label="Artista"
        tools:layout="@layout/fragment_artist">

        <action
            android:id="@+id/action_artistFragment_to_albumFragment"
            app:destination="@id/albumFragment" />

    </fragment>

    <fragment
        android:id="@+id/songFragment"
        android:name="com.example.resonant.SongFragment"
        android:label="Cancion"
        tools:layout="@layout/fragment_song"/>

</navigation>
